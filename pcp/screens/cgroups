[cgroup]
caption = Cgroup
enabled = true

cuser.heading = UTIME
cuser.caption = User CPU Time
cuser.width = -8
cuser.metric = cgroup.cpu.stat.user

csystem.heading = STIME
csystem.caption = Kernel CPU Time
csystem.width = -8
csystem.metric = cgroup.cpu.stat.system

cusage.heading = CPU
cusage.caption = CPU Time
cusage.width = -8
cusage.metric = cgroup.cpu.stat.usage

name.heading = Control group
name.caption = Control group name
name.width = -12
name.metric = cgroup.cpu.stat.system
name.instances = true
